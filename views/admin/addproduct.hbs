{{> adminheader}}
<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4"> Add Product</h4>

        <div class="row">
            <div class="col-md-12">
                <form action="/admin/products/add_product" method="POST" enctype="multipart/form-data">
                    <h5 class="card-header">Add product image</h5>
                    <!-- Account -->
                    <div class="card-body">
                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                            <img id="user-avatar" src="../images/add-product.png" alt="user-avatar"
                                class="d-block rounded" height="100" width="100" />
                            <div class="button-wrapper">
                                <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                    <span class="d-none d-sm-block">Upload new image</span>
                                    <i class="bx bx-upload d-block d-sm-none"></i>
                                    <input type="file" id="upload" name="image" class="account-file-input" hidden
                                        onchange="displayImage(this)" accept="image/png, image/jpeg" required />
                                </label>
                                <button type="button" class="btn btn-outline-secondary account-image-reset mb-4">
                                    <i class="bx bx-reset d-block d-sm-none"></i>
                                    <span class="d-none d-sm-block">Reset</span>
                                </button>

                                <p class="text-muted mb-0">Allowed JPG, GIF or PNG. Max size of 800K</p>
                            </div>
                        </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">

                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="firstName" class="form-label">Name:</label>
                                <input class="form-control" type="text" id="firstName" name="name"
                                    placeholder="Name of Product" autofocus required />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Description</label>
                                <input type="text" class="form-control" name="description" placeholder="Description"
                                    required />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label" for="phoneNumber">Price</label>
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text">Rs :</span>
                                    <input type="number" id="phoneNumber" name="price" class="form-control"
                                        placeholder="price" required />
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Qty</label>
                                <input type="number" class="form-control" name="qty" placeholder="Quality" required />
                            </div>


                            <div class="mb-3 col-md-6">
                                <label class="form-label" for="country">Category</label>
                                <select id="country" name="category" class="select2 form-select" required>
                                    <option value="">Select</option>
                                    <option value="electronics">Electronics</option>
                                    <option value="fasion">Fasion</option>
                                    <option value="jwellery">jwellery</option>
                                    <option value="kitchen">kitchen</option>
                                    <option value="home">home items</option>
                                    <option value="fancy">Fancy items</option>

                                </select>
                            </div>


                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">Add Product</button>
                            <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function displayImage(input) {
  var reader = new FileReader();

  reader.onload = function (e) {
    document.getElementById('user-avatar').src = e.target.result;
  };

  reader.readAsDataURL(input.files[0]);
}

</script>
{{> adminfooter}}
