<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/cart.css' />
</head>

<body>
    <div class="card">
        <div class="row">
            <div class="col-md-7 cart">
                <div class="">
                    <div class="row">
                        <div class="col">
                            <h4><b>CHECKOUT</b></h4>

                        </div>
                        <p>ENTER SHIPPING DETAILS</p>

                    </div>
                </div>

                <form id="formorder" action="/users/placeorder" method="post">
                    
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control" id="name" placeholder="Name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="address">Address:</label>
                        <input type="text" class="form-control" id="address" placeholder="Address" name="address" required>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="city">City:</label>
                            <input type="text" class="form-control" placeholder="City" name="city" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="state">State:</label>
                            <input type="text" class="form-control" placeholder="state" name="state" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="pincode">Pin Code:</label>
                            <input type="text" class="form-control" placeholder="000000" name="pincode" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="emailaddress">Mob No:</label>
                            <input type="text" id="contact" class="form-control" placeholder="9605942261"
                                name="mobileno" required>
                        </div>
                    </div>

            </div>

            <div class="col-md-5 summary">
                <div class="title">
                    <div class="row">
                        <div class="col">
                            <h3><b>Summary</b></h3>
                        </div>
                        <div class="col align-self-center text-right text-muted">{{count}} items</div>
                    </div>
                </div>

                <hr>
                <div class="row">
                    <div class="col" style="padding-left:0;">ITEMS {{count}}</div>
                    <div class="col text-right">Rs: {{data.totalPrice}}</div>
                </div>

                {{#each data.items}}
                <div class="row border-top border-bottom">
                    <div class="row main align-items-center">
                        <div class="col-2"><img class="img-fluid" src="../products-images/{{this.product.image}}"></div>
                        <div class="col">
                            <div class="row text-muted">{{this.product.category}}</div>
                            <div class="row">{{this.product.name}}</div>

                        </div>

                        <div class="col">Rs : {{this.product.price}} <span class="close"><a
                                    href="/users/cart">&#10005;</a></span></div>
                    </div>
                </div>
                {{/each}}

                <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                    <div class="col">TOTAL PRICE</div>
                    <div class="col text-right">Rs: {{total}}</div>
                </div>

                <button type="submit" class="btn btn-success">PLACE ORDER</button>
                {{!-- <button id="rzp-button1">Pay with Razorpay</button> --}}
            </div>

        </div>
        </form>

    </div>
    {{!--
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script> --}}


    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        $("#formorder").submit((e) => {
            e.preventDefault();
            $.ajax({
                url: '/users/placeorder', // Corrected URL
                method: 'POST',
                data: $("#formorder").serialize(),
                success: (res) => {
                    razorpay(res)
                },
                error: (xhr, status, error) => {
                    console.error("AJAX Error:", status, error);
                }
            });
        });

        function razorpay(order) {
            var options = {
                "key": "rzp_test_pJw1K1QJDp192x", // Enter the Key ID generated from the Dashboard
                "amount": order.amount * 100, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
                "currency": "INR",
                "name": "Ras Shopping",
                "description": "Test Transaction",
                "image": "../public/images/logo.png",
                "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
                "callback_url": "https://eneqd3r9zrjok.x.pipedream.net/",
                "handler": function (response) {
                    verify(response, order.receipt);
                },
                "prefill": {
                    "name": $("#name").val(),
                    "address": $("#address").val(),
                    "contact": $("#contact").val(),
                },
                "notes": {
                    "address": "Razorpay Corporate Office"
                },
                "theme": {
                    {{!-- "color": "#3399cc" --}}
                    "color": "#FFFF00"
                }
            };
            var rzp1 = new Razorpay(options);
            rzp1.open();
        }
        function verify(payment,orderID) {
            $.ajax({
                url: '/users/verifypayment',
                method: 'POST',
                data: {
                    payment,
                    orderID
                },
                success: (response)=>{
                    if(response=="sucess"){
                        location.href = "/users/sucess";
                    }
                    else{
                        location.href = "/users/fail";
                    }
                    
                },
            })
        } 
    </script>
</body>

</html>